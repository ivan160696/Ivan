<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/ivGoldenGate"
        android:layout_width="200dp"
        android:layout_height="156dp"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/golden_gate_bridge" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_below="@+id/ivGoldenGate"
        android:layout_margin="16dp"
        android:background="#4285F4"
        android:padding="16dp"
        android:text="Golden Gate Bridge \nSan Francisco "
        android:textColor="@color/white"
        android:textSize="20sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_margin="16dp"
        android:background="#4285F4"
        android:padding="16dp"
        android:text="Is a suspension bridge spanning the Golden Gate strait, the one-mile-wide, three-mile-long"
        android:textColor="@color/white"
        android:textSize="20sp" />


</RelativeLayout>